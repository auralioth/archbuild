pkgname=clash-meta-alpha-git
_pkgname=mihomo
pkgver=0.6.0.r2995.g26471357
pkgrel=1
pkgdesc="A rule-based tunnel in Go"
arch=('x86_64')
url="https://github.com/MetaCubeX/mihomo"
license=('GPL-3.0-or-later')
depends=('glibc')
makedepends=('git' 'go')
provides=('clash-meta')
conflicts=('clash-meta')
options=('!lto')
source=("git+${url}.git#branch=Alpha")
sha256sums=('SKIP')

pkgver() {
	cd "${srcdir}"/"${_pkgname}"/
	git describe --long | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd "${srcdir}"/"${_pkgname}"/
	make linux-amd64
}

package() {
	cd "${srcdir}"/"${_pkgname}"/
	install -Dm 755 "bin/${_pkgname}-linux-amd64" "${pkgdir}/usr/bin/clash-meta"
}
