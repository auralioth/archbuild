            '6d8f590f1f584eede69f27f3e8ffacba92008ae85341007f9b0d07e9b016e247')

package() {
	cd "$srcdir"
	install -Dm644 geoip.dat "$pkgdir"/usr/share/dae/geoip.dat
	install -Dm644 geosite.dat "$pkgdir"/usr/share/dae/geosite.dat
}
