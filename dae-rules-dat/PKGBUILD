pkgname=dae-rules-dat
_pkgname=v2ray-rules-dat
pkgver=202501102212
pkgrel=2
pkgdesc="Route rules for dae"
arch=('any')
url="https://github.com/Loyalsoldier/v2ray-rules-dat"
