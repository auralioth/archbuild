pkgname=noto-fonts-git
_pkgname=notofonts
pkgver=r935.e8446af
pkgrel=1
pkgdesc='Google Noto TTF fonts(include additional variants)'
arch=(any)
url='https://fonts.google.com/noto'
license=(custom:SIL)
makedepends=(git)
optdepends=('noto-fonts-cjk: CJK characters' 'noto-fonts-emoji: Emoji characters')
provides=('ttf-font' 'noto-fonts')
conflicts=('noto-fonts')
source=(git+https://github.com/notofonts/notofonts.github.io)
sha256sums=('SKIP')

pkgver() {
	cd "$srcdir/$_pkgname"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
}

package() {
	cd "$srcdir/$_pkgname"
	install -Dm644 fonts/*/hinted/ttf/*.tt[fc] -t "$pkgdir"/usr/share/fonts/noto
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/noto-fonts
}
