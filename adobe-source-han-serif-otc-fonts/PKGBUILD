_pkgbase=adobe-source-han-serif
pkgbase=$_pkgbase-fonts
pkgname=$_pkgbase-otc-fonts
pkgver=2.002
pkgrel=1
pkgdesc="Adobe Source Han Serif - Pan-CJK OpenType/CFF Collection fonts"
arch=('any')
license=('custom:SIL')
url='https://github.com/adobe-fonts/source-han-serif'
source=("git+${url}.git"
	"https://github.com/adobe-fonts/source-han-serif/releases/download/${pkgver}/03_SourceHanSerifOTC.zip")
sha512sums=('SKIP'
	'SKIP')

pkgver() {
	cd source-han-serif
	git tag --sort=-version:refname | head -n 1
}

package() {
	cd "$srcdir/OTC"

	# Prepare destination directory
	install -dm755 "$pkgdir/usr/share/fonts/adobe-source-han-serif"

	# Install fonts
	install -m644 * "$pkgdir/usr/share/fonts/adobe-source-han-serif"
}
