pkgname=dae-geosite
pkgver=20240123112230
pkgrel=1
pkgdesc="A list of domains to be used as geosites for routing purpose in Project dae"
arch=('any')
url="https://github.com/v2fly/domain-list-community"
license=('MIT')
source=("git+${url}.git"
	"geosite-$pkgver.dat::https://github.com/v2fly/domain-list-community/releases/download/$pkgver/dlc.dat")
sha512sums=('SKIP'
	'SKIP')

pkgver() {
	cd domain-list-community
	git tag --sort=-version:refname | head -n 1
}

package() {
	install -Dm644 geosite-$pkgver.dat "$pkgdir"/usr/share/dae/geosite.dat
}
